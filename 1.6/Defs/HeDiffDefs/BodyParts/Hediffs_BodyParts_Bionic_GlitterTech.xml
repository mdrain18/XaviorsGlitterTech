        <costList>
            <Plasteel>50</Plasteel>
            <AlphaPoly>10</AlphaPoly>
            <ComputerComp>1</ComputerComp>
            <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <thingSetMakerTags>
            <li>RewardStandardCore</li>
        </thingSetMakerTags>
        <statBases>
            <Mass>2</Mass>
            <MarketValue>2500</MarketValue>
        </statBases>
        <techHediffsTags>
            <li>OCBodyParts</li>
        </techHediffsTags>
    </ThingDef>

    <RecipeDef ParentName="GlitterTechSurgeryBase">
        <defName>InstallOCExo</defName>
        <label>Install Orion Exoskeleton</label>
        <description>Installs Orion Exoskeleton.</description>
