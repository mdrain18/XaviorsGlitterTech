        <workType>Mining</workType>
        <priorityInType>60</priorityInType>
        <verb>operate</verb>
        <gerund>operating</gerund>
        <requiredCapacities>
          <li>Manipulation</li>
        </requiredCapacities>
        <canBeDoneByMechs>false</canBeDoneByMechs>
        <canBeDoneByMutants>false</canBeDoneByMutants>
