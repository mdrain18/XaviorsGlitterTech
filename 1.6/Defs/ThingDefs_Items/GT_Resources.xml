<Defs>
    <!--=============== Titanium_GT ====================-->
    <ThingDef ParentName="ResourceBase">
        <defName>Titanium_GT</defName>
        <label>titanium</label>
        <description>Titanium alloy. A complex mix of rare elements, making a very strong, durable, and light material resistant to corrosion, and high velocity kinetics. Perfect for star ships and orbital space elevators...</description>
        <graphicData>
            <texPath>Things/Item/Resource/Titanium_GT</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Metal_Drop</soundInteract>
        <soundDrop>Metal_Drop</soundDrop>
        <useHitPoints>false</useHitPoints>
        <healthAffectsPrice>false</healthAffectsPrice>
        <statBases>
            <MarketValue>22</MarketValue>
            <Mass>0.15</Mass>
            <StuffPower_Armor_Sharp>1.9</StuffPower_Armor_Sharp>
            <StuffPower_Armor_Blunt>1</StuffPower_Armor_Blunt>
            <StuffPower_Armor_Heat>1.35</StuffPower_Armor_Heat>
            <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
            <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
            <SharpDamageMultiplier>1.6</SharpDamageMultiplier>
            <BluntDamageMultiplier>1.3</BluntDamageMultiplier>
        </statBases>
        <thingCategories>
            <li>ResourcesRaw</li>
        </thingCategories>
        <deepCommonality>0.3</deepCommonality>
        <deepCountPerPortion>20</deepCountPerPortion>
        <deepLumpSizeRange>6~14</deepLumpSizeRange>
        <burnableByRecipe>false</burnableByRecipe>
        <smeltable>true</smeltable>
        <stuffProps>
            <categories>
                <li>Metallic</li>
            </categories>
            <appearance>Metal</appearance>
            <color>(255,255,255)</color>
            <commonality>0.05</commonality>
            <constructEffect>ConstructMetal</constructEffect>
            <isAirtight>true</isAirtight>
            <!-- IMPORTANT FOR 1.6 -->
            <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
            <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
            <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
            <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Metal</soundImpactMelee>
            <statFactors>
                <MaxHitPoints>3.5</MaxHitPoints>
                <Flammability>0</Flammability>
                <Beauty>3</Beauty>
                <DoorOpenSpeed>2</DoorOpenSpeed>
                <BedRestEffectiveness>1.5</BedRestEffectiveness>
                <WorkToMake>3.0</WorkToMake>
                <WorkToBuild>3.0</WorkToBuild>
                <MeleeWeapon_CooldownMultiplier>0.6</MeleeWeapon_CooldownMultiplier>
            </statFactors>
        </stuffProps>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <allowedArchonexusCount>80</allowedArchonexusCount>
    </ThingDef>
