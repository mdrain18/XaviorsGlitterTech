            <Titanium_GT>15</Titanium_GT>
            <ComponentIndustrial>1</ComponentIndustrial>
            <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <thingSetMakerTags>
            <li>RewardStandardMidFreq</li>
        </thingSetMakerTags>
        <statBases>
            <Mass>2.0</Mass>
            <MarketValue>2400</MarketValue>
        </statBases>
        <techHediffsTags>
            <li>Advanced</li>
        </techHediffsTags>
    </ThingDef>
    <!-- RecipeDef (Install) -->
    <RecipeDef ParentName="GlitterTechSurgeryBase">
        <defName>InstallGTArm</defName>
        <label>install advanced bionic arm</label>
        <description>Install an advanced bionic arm.</description>
        <descriptionHyperlinks>
            <ThingDef>GTArm</ThingDef>
            <HediffDef>GTArm</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing advanced bionic arm.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>GTArm</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>GTArm</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Shoulder</li>
        </appliedOnFixedBodyParts>
        <addsHediff>GTArm</addsHediff>
    </RecipeDef>
    <!-- RecipeDef (Un-Install) -->
    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>RemoveGTArm</defName>
        <label>remove advanced bionic arm</label>
        <description>Remove advanced bionic arm.</description>
