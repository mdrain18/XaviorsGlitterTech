<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Only run if the Alpha Mechs mod is present -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>sarg.alphamechs</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <!-- Insert 3 stock entries into your BlackmarketCoreTrader -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/TraderKindDef[defName=&quot;BlackmarketCoreTrader&quot;]/stockGenerators</xpath>
          <value>
            <li Class="StockGenerator_SingleDef">
              <thingDef>AM_HyperLinkageChip</thingDef>
              <countRange>2~4</countRange>
            </li>
            <li Class="StockGenerator_SingleDef">
              <thingDef>AM_StellarProcessingChip</thingDef>
              <countRange>1~3</countRange>
            </li>
            <li Class="StockGenerator_SingleDef">
              <thingDef>AM_QuantumMatrixChip</thingDef>
              <countRange>0~1</countRange>
            </li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>