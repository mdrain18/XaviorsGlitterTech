<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Lighter handling; small power bump -->
  <WeaponTraitDef>
    <defName>Lightweightsword</defName>
    <label>lightweight</label>
    <description>This weapon is much lighter than normal, improving handling.</description>
    <commonality>1</commonality>
    <weaponCategory>Sword</weaponCategory>
    <exclusionTags>
      <li>Weight</li>
      <!-- Also exclude other speed-mod traits so they don't stack -->
      <li>SpeedMod</li>
    </exclusionTags>
    <statFactors>
      <Mass>0.75</Mass>
      <!-- If you're using the cooldown shim and the weapon has a base cooldown -->
      <MeleeWeapon_Cooldown>0.95</MeleeWeapon_Cooldown>
    </statFactors>
    <statOffsets>
      <MeleeWeapon_DamageMultiplier>0.05</MeleeWeapon_DamageMultiplier>
      <MeleeWeapon_ArmorPenetrationMultiplier>0.05</MeleeWeapon_ArmorPenetrationMultiplier>
      <MarketValue>80</MarketValue>
    </statOffsets>
    <traitAdjectives>
      <li>light</li>
      <li>swift</li>
    </traitAdjectives>
  </WeaponTraitDef>

