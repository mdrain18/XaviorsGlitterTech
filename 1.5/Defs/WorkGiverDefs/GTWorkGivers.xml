            <li>PharmaTable</li>
        </fixedBillGiverDefs>
        <verb>produce</verb>
        <gerund>producing</gerund>
    </WorkGiverDef>
    
    <WorkGiverDef>
        <defName>OperateAdvancedDeepDrill</defName>
        <label>operate advanced deep drill</label>
