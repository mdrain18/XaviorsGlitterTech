<Defs>
    <!-- Advanced Bionic Heart -->
    <!-- HediffDef -->
    <HediffDef ParentName="GlitterTechBionicBase">
        <defName>GTHeart</defName>
        <label>Advanced bionic heart</label>
        <labelNoun>an advanced bionic heart</labelNoun>
        <description>The second generation of bionic upgrades. A high-performance heart replacement that significantly improves blood circulation and stamina.</description>
        <descriptionHyperlinks>
            <ThingDef>GTHeart</ThingDef>
        </descriptionHyperlinks>
        <spawnThingOnRemoved>GTHeart</spawnThingOnRemoved>
        <stages>
            <li>
                <statOffsets>
                    <RestRateMultiplier>0.1</RestRateMultiplier>
                    <ImmunityGainSpeed>0.1</ImmunityGainSpeed>
                </statOffsets>
                <statFactors>
                    <RestFallRateFactor>0.8</RestFallRateFactor>
                </statFactors>
            </li>
        </stages>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.4</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>
    </HediffDef>
    <!-- ThingDef -->
    <ThingDef ParentName="GlitterTechBionicItemBase">
        <defName>GTHeart</defName>
        <label>Advanced bionic heart</label>
        <description>The second generation of bionic upgrades. A high-performance heart replacement that significantly improves blood circulation and stamina.</description>
        <descriptionHyperlinks>
            <RecipeDef>InstallGTHeart</RecipeDef>
        </descriptionHyperlinks>
        <costList>
            <Plasteel>15</Plasteel>
            <Titanium_GT>20</Titanium_GT>
            <ComponentIndustrial>1</ComponentIndustrial>
            <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <thingSetMakerTags>
            <li>RewardStandardMidFreq</li>
        </thingSetMakerTags>
        <statBases>
            <Mass>1.0</Mass>
            <MarketValue>2300</MarketValue>
        </statBases>
        <techHediffsTags>
            <li>Advanced</li>
        </techHediffsTags>
    </ThingDef>
    <!-- RecipeDef (Install) -->
    <RecipeDef ParentName="GlitterTechSurgeryBase">
        <defName>InstallGTHeart</defName>
        <label>install advanced bionic heart</label>
        <description>Install an advanced bionic heart.</description>
        <descriptionHyperlinks>
            <ThingDef>GTHeart</ThingDef>
            <HediffDef>GTHeart</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing advanced bionic heart.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
            <li>GTHeart</li>
            </thingDefs>
            </filter>
            <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>GTHeart</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Heart</li>
        </appliedOnFixedBodyParts>
        <addsHediff>GTHeart</addsHediff>
    </RecipeDef>
    <!-- RecipeDef (Un-Install) -->
    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>RemoveGTHeart</defName>
        <label>remove advanced bionic heart</label>
        <description>Remove advanced bionic heart.</description>
        <descriptionHyperlinks>
            <ThingDef>GTHeart</ThingDef>
            <HediffDef>GTHeart</HediffDef>
        </descriptionHyperlinks>
        <jobString>Removing advanced bionic heart.</jobString>
        <removesHediff>GTHeart</removesHediff>
    </RecipeDef>
