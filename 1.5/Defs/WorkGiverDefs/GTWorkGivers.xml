            <li>Electrolyzer</li>
        </fixedBillGiverDefs>
        <verb>electrolyze</verb>
        <gerund>electrolyzing</gerund>
    </WorkGiverDef>

    <WorkGiverDef ParentName="GTWorkGiver">
        <defName>DoBillsRobassem</defName>
        <label>operate Robotic Assembler</label>
        <fixedBillGiverDefs>
            <li>RobAssem</li>
        </fixedBillGiverDefs>
        <verb>assemble</verb>
        <gerund>assembling</gerund>
    </WorkGiverDef>

    <WorkGiverDef ParentName="GTWorkGiver">
        <defName>DoBillsPharma</defName>
