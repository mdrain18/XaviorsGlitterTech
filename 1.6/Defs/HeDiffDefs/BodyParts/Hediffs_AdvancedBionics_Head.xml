<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Advanced Bionic Ear -->
    <!-- HediffDef -->
    <HediffDef ParentName="GlitterTechBionicBase">
        <defName>GTEar</defName>
        <label>Advanced bionic ear</label>
        <labelNoun>an advanced bionic ear</labelNoun>
        <description>The advanced version of the bionic ear. The second generation of bionic upgrades, typically reserved for top brass military forces, which allow the user to hear the slightest inflections of someone else's voice which gives them a leg up in negotiations. Users have even said after having the ear installed, individuals with annoying voices seemed to suddenly sound less annoying...</description>
        <descriptionHyperlinks>
            <ThingDef>GTEar</ThingDef>
        </descriptionHyperlinks>
        <spawnThingOnRemoved>GTEar</spawnThingOnRemoved>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Hearing</capacity>
                        <offset>1</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <SocialImpact>0.05</SocialImpact>
                    <TradePriceImprovement>0.10</TradePriceImprovement>
                </statOffsets>
            </li>
        </stages>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.4</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>
    </HediffDef>
    <!-- ThingDef -->
    <ThingDef ParentName="GlitterTechBionicItemBase">
        <defName>GTEar</defName>
        <label>Advanced bionic ear</label>
        <description>The advanced version of the bionic ear. The second generation of bionic upgrades, typically reserved for top brass military forces.</description>
        <descriptionHyperlinks>
            <RecipeDef>InstallGTEar</RecipeDef>
        </descriptionHyperlinks>
        <graphicData>
            <texPath>Things/Item/BodyPart/CyberneticOrgan</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costList>
            <Plasteel>5</Plasteel>
            <Titanium_GT>10</Titanium_GT>
            <ComponentIndustrial>1</ComponentIndustrial>
            <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <thingSetMakerTags>
            <li>RewardStandardMidFreq</li>
        </thingSetMakerTags>
        <statBases>
            <Mass>0.3</Mass>
            <MarketValue>2000</MarketValue>
        </statBases>
        <techHediffsTags>
            <li>AdvancedGTLimb</li>
        </techHediffsTags>
    </ThingDef>
    <!-- RecipeDef (Install) -->
    <RecipeDef ParentName="GlitterTechSurgeryBase">
        <defName>InstallGTEar</defName>
        <label>install advanced bionic ear</label>
        <description>Install an advanced bionic ear.</description>
        <descriptionHyperlinks>
            <ThingDef>GTEar</ThingDef>
            <HediffDef>GTEar</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing advanced bionic ear.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>GTEar</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>GTEar</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Ear</li>
        </appliedOnFixedBodyParts>
        <addsHediff>GTEar</addsHediff>
    </RecipeDef>
    <!-- RecipeDef (Un-Install) -->
    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>RemoveGTEar</defName>
        <label>remove advanced bionic ear</label>
        <description>Remove advanced bionic ear.</description>
        <descriptionHyperlinks>
            <ThingDef>GTEar</ThingDef>
            <HediffDef>GTEar</HediffDef>
        </descriptionHyperlinks>
        <jobString>Removing advanced bionic ear.</jobString>
        <removesHediff>GTEar</removesHediff>
    </RecipeDef>
