        <priorityInType>90</priorityInType>
        <requiredCapacities>
            <li>Manipulation</li>
        </requiredCapacities>
    </WorkGiverDef>

    <WorkGiverDef ParentName="GTWorkGiver">
        <defName>DoBillsMatterfab</defName>
        <label>operate Matter Fabricator</label>
        <fixedBillGiverDefs>
            <li>Matterfab</li>
        </fixedBillGiverDefs>
        <verb>fabricate</verb>
        <gerund>fabricating</gerund>
    </WorkGiverDef>

    <WorkGiverDef ParentName="GTWorkGiver">
        <defName>DoBillsElectrolysis</defName>
        <label>operate electrolyzer</label>
