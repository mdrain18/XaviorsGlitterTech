    <!-- ========================= Matter fabricator: Titanium ==========================-->
    <RecipeDef>
        <defName>ProduceTitanium</defName>
        <label>Produce titanium from plasteel</label>
        <description>Produce titanium by changing the molecular structure of Plasteel and removing all impurities. A byproduct of this process is Silicon</description>
        <jobString>Producing titanium from plasteel</jobString>
        <workAmount>200</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>40</count>
            </li>
        </ingredients>
        <products>
            <Titanium_GT>4</Titanium_GT>
            <Silicon>5</Silicon>
        </products>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Plasteel</li>
            </thingDefs>
        </fixedIngredientFilter>
        <workSkill>Crafting</workSkill>
    </RecipeDef>
    <!-- ========================= Electrolyzer ==========================-->
    <RecipeDef>
        <defName>ProduceSilicon</defName>
        <label>Produce silicon from stone</label>
        <description>Produce silicon from stone by electrolyzing and pressurizing stone which changes the molecular structure and removes all impurities</description>
        <jobString>Producing silicon from stone</jobString>
        <workAmount>300</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>StoneBlocks</li>
                    </categories>
                </filter>
                <count>30</count>
            </li>
        </ingredients>
        <products>
            <Silicon>6</Silicon>
        </products>
        <fixedIngredientFilter>
            <categories>
                <li>StoneBlocks</li>
            </categories>
        </fixedIngredientFilter>
        <workSkill>Crafting</workSkill>
    </RecipeDef>
