<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Absolute per-weapon melee cooldown (seconds).
       Default 0 = disabled (vanilla tool cooldown is used).
       Traits/quality/etc. can factor/offset this like any other stat. -->
  <StatDef>
    <defName>MeleeWeapon_Cooldown</defName>
    <label>melee cooldown</label>
    <description>How long it takes to recover after striking with this weapon.</description>
    <category>Weapon_Melee</category>
    <defaultBaseValue>0</defaultBaseValue>
    <minValue>0</minValue>
    <toStringStyle>FloatTwo</toStringStyle>
    <formatString>{0} s</formatString>
    <hideAtValue>0</hideAtValue>
    <showIfUndefined>false</showIfUndefined>
    <displayPriorityInCategory>5106</displayPriorityInCategory>
    <scenarioRandomizable>true</scenarioRandomizable>
  </StatDef>

  <!-- Extra armor pen multiplier applied to melee. Default 1 (no change). -->
  <StatDef>
    <defName>MeleeWeapon_ArmorPenetrationMultiplier</defName>
    <label>armor penetration multiplier</label>
    <description>A multiplier applied to armor penetration in melee.</description>
    <category>Weapon_Melee</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0</minValue>
    <toStringStyle>PercentZero</toStringStyle>
    <alwaysHide>true</alwaysHide>
    <displayPriorityInCategory>5399</displayPriorityInCategory>
    <parts>
      <!-- Optional: quality bumps, mirroring ranged AP multiplier -->
      <li Class="StatPart_Quality">
        <factorAwful>0.9</factorAwful>
        <factorPoor>1</factorPoor>
        <factorNormal>1</factorNormal>
        <factorGood>1</factorGood>
        <factorExcellent>1</factorExcellent>
        <factorMasterwork>1.25</factorMasterwork>
        <factorLegendary>1.5</factorLegendary>
      </li>
    </parts>
    <scenarioRandomizable>true</scenarioRandomizable>
  </StatDef>

</Defs>
