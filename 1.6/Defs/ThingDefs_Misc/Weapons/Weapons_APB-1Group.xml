    <!-- APB Pistol -->
    <ThingDef ParentName="BaseGunWithQuality">
        <defName>Gun_APBPistol</defName>
        <label>APB-1 Pistol</label>
        <description>Anti-personnel blaster pistol. Fires small plasma explosive bolts designed to detonate on impact with flesh and light armor.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/misc/APB-1Pistol</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>
        <statBases>
            <MarketValue>2100</MarketValue>
            <AccuracyTouch>0.75</AccuracyTouch>
            <AccuracyShort>0.85</AccuracyShort>
            <AccuracyMedium>0.70</AccuracyMedium>
            <AccuracyLong>0.40</AccuracyLong>
            <RangedWeapon_Cooldown>0.55</RangedWeapon_Cooldown>
            <WorkToMake>9000</WorkToMake>
            <Mass>1.4</Mass>
        </statBases>
        <techLevel>Spacer</techLevel>
        <recipeMaker>
            <researchPrerequisite>ChargedShot</researchPrerequisite>
            <workSkill>Crafting</workSkill>
            <skillRequirements>
                <Crafting>13</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>RobAssem</li>
            </recipeUsers>
            <displayPriority>200</displayPriority>
        </recipeMaker>
        <costList>
            <Plasteel>15</Plasteel>
            <Uranium>2</Uranium>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <weaponTags>
            <li>GlitterTech</li>
            <li>SpacerGun</li>
        </weaponTags>
        <tradeTags>
            <li>WeaponRanged</li>
        </tradeTags>
        <weaponClasses>
            <li>RangedLight</li>
        </weaponClasses>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_APBPistol</defaultProjectile>
                <warmupTime>0.1</warmupTime>
                <range>18</range>
                <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
                <burstShotCount>2</burstShotCount>
                <soundCast>PB</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
                <forcedMissRadius>1.0</forcedMissRadius>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>

