    <ThingDef ParentName="BaseGunWithQuality">
        <defName>Gun_APB-1Pistol</defName>
        <label>APB-1 Pistol</label>
        <description>Anion Particle Beam Pistol mark 1. The compact counter part of the APB-1 Rifle, this pistol
            projects anions through Hydrogen, creating a neutrally charged kinetic projectile capable of disassembling
            matter on the atomic level. Accurate and powerful, this weapon will ignite most targets.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/misc/APB-1Pistol</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>
        <statBases>
            <AccuracyTouch>0.45</AccuracyTouch>
            <AccuracyShort>0.35</AccuracyShort>
            <AccuracyMedium>0.20</AccuracyMedium>
            <AccuracyLong>0.10</AccuracyLong>
            <RangedWeapon_Cooldown>0.50</RangedWeapon_Cooldown>
            <MarketValue>1600</MarketValue>
            <WorkToMake>12000</WorkToMake>
            <Mass>2.3</Mass>
        </statBases>
        <techLevel>Spacer</techLevel>
        <recipeMaker>
            <researchPrerequisite>ChargedShot</researchPrerequisite>
            <skillRequirements>
                <Crafting>15</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>FabricationBench</li>
            </recipeUsers>
            <displayPriority>200</displayPriority>
        </recipeMaker>
        <costList>
            <Plasteel>20</Plasteel>
            <Titanium_GT>10</Titanium_GT>
            <Uranium>2</Uranium>
            <MagneticCoil>1</MagneticCoil>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
        <weaponTags>
            <li>GlitterTech</li>
        </weaponTags>
        <tradeTags>
            <li>WeaponRanged</li>
        </tradeTags>
        <weaponClasses>
            <li>RangedLight</li>
        </weaponClasses>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_APBPistol</defaultProjectile>
                <warmupTime>0.1</warmupTime>
                <range>30</range>
                <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
                <burstShotCount>2</burstShotCount>
                <soundCast>PB</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
                <forcedMissRadius>1.0</forcedMissRadius>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
