<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <RecipeDef>
        <defName>SearchComponents</defName>
        <label>Search components</label>
        <description>Search through the multitude of miscellaneous parts for a rare computer component.</description>
        <jobString>Searching for computer components</jobString>
        <workAmount>2500</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <recipeUsers>
            <li>TableMachining</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <products>
            <ComponentIndustrial>7</ComponentIndustrial>
            <ComputerComp>1</ComputerComp>
        </products>
        <fixedIngredientFilter>
            <thingDefs>
                <li>ComponentIndustrial</li>
            </thingDefs>
        </fixedIngredientFilter>
        <workSkill>Crafting</workSkill>
    </RecipeDef>
    <!-- ========================= Matter fabricator: Polys ==========================-->
    <RecipeDef>
        <defName>ProduceAPoly</defName>
        <label>Artificially assemble alpha poly</label>
        <description>Use heat and strong electromagnets to assemble artificial elements from Titanium and Uranium</description>
        <jobString>Fabricating alpha poly from titanium</jobString>
        <workAmount>650</workAmount>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Titanium_GT</li>
                    </thingDefs>
                </filter>
                <count>20</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Uranium</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <products>
            <AlphaPoly>10</AlphaPoly>
        </products>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Titanium_GT</li>
                <li>Uranium</li>
            </thingDefs>
        </fixedIngredientFilter>
        <workSkill>Crafting</workSkill>
    </RecipeDef>
