<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- ============= Stuff-less apparel =================-->

    <ThingDef ParentName="ApparelBase">
        <defName>Apparel_OCHelmet</defName>
        <label>Orion Corporation helmet</label>
        <description>A standard issue Orion Corporation helmet. Other then the characteristic Orion blue, it is made of more advanced materials then the standard helmet.</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/AdvancedHelmet/AdvancedHelmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>400</MaxHitPoints>
            <MarketValue>700</MarketValue>
            <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
            <Mass>2</Mass>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.02</MoveSpeed>
            <PsychicSensitivity>-0.45</PsychicSensitivity>
        </equippedStatOffsets>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>        
        <generateCommonality>1</generateCommonality>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/AdvancedHelmet/AdvancedHelmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>OCArmor</li>
            </tags>
        </apparel>
        <costList>
            <Steel>10</Steel>
            <Plasteel>20</Plasteel>
            <Titanium_GT>5</Titanium_GT>
        </costList>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>6</weight>
                    <only>RGBA(0.6,0.6,1,1)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>

    <ThingDef ParentName="ApparelBase">
        <defName>Apparel_OCPants</defName>
        <label>Orion Uniform pants</label>
        <description>A set of Orion pants.</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/Pants/Pants</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <statBases>
            <MarketValue>800</MarketValue>
            <ArmorRating_Blunt>0.09</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.09</ArmorRating_Sharp>
            <Insulation_Cold>10</Insulation_Cold>
            <Insulation_Heat>10</Insulation_Heat>
            <Mass>1</Mass>
        </statBases>
        <generateCommonality>1</generateCommonality>
        <apparel>
            <bodyPartGroups>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>OCFatigues</li>
            </tags>
        </apparel>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>6</weight>
                    <only>RGBA(0.65,0.65,0.65,1)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>

    <ThingDef ParentName="ApparelBase">
        <defName>Apparel_OCShirt</defName>
        <label>Orion Uniform Shirt</label>
        <description>A basic Orion shirt.</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/ShirtBasic/ShirtBasic</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <statBases>
            <MarketValue>800</MarketValue>
            <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
            <Insulation_Cold>10</Insulation_Cold>
            <Insulation_Heat>10</Insulation_Heat>
            <Mass>1</Mass>
        </statBases>
        <generateCommonality>1</generateCommonality>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/ShirtBasic/ShirtBasic</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>OCFatigues</li>
            </tags>
        </apparel>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <weight>6</weight>
                    <only>RGBA(0.3,0.3,0.3,1)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>

</Defs>