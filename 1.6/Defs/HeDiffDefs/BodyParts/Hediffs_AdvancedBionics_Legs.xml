<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Advanced Bionic Leg -->
    <!-- HediffDef -->
    <HediffDef ParentName="GlitterTechBionicBase">
        <defName>GTLeg</defName>
        <label>Advanced bionic leg</label>
        <labelNoun>an advanced bionic leg</labelNoun>
        <description>The second generation of bionic upgrades, using nano fibres to produce artificial muscles. Enhances speed, strength, and stability. You can run faster, jump higher, and kick harder.</description>
        <descriptionHyperlinks>
            <ThingDef>GTLeg</ThingDef>
        </descriptionHyperlinks>
        <spawnThingOnRemoved>GTLeg</spawnThingOnRemoved>
        <stages>
            <li>
                <capMods>
            <li>
                <capacity>Moving</capacity>
                <offset>0.5</offset>
            </li>
            </capMods>
            </li>
        </stages>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.4</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>
    </HediffDef>
    <!-- ThingDef -->
    <ThingDef ParentName="GlitterTechBionicItemBase">
        <defName>GTLeg</defName>
        <label>Advanced bionic leg</label>
        <description>The second generation of bionic upgrades, using nano fibres to produce artificial muscles. Enhances speed, strength, and stability. You can run faster, jump higher, and kick harder.</description>
        <descriptionHyperlinks>
            <RecipeDef>InstallGTLeg</RecipeDef>
        </descriptionHyperlinks>
        <costList>
            <Plasteel>10</Plasteel>
            <Titanium_GT>15</Titanium_GT>
            <ComponentIndustrial>1</ComponentIndustrial>
            <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <thingSetMakerTags>
            <li>RewardStandardMidFreq</li>
        </thingSetMakerTags>
        <statBases>
            <Mass>2.0</Mass>
            <MarketValue>2300</MarketValue>
        </statBases>
        <techHediffsTags>
            <li>Advanced</li>
        </techHediffsTags>
    </ThingDef>
    <!-- RecipeDef (Install) -->
    <RecipeDef ParentName="GlitterTechSurgeryBase">
        <defName>InstallGTLeg</defName>
        <label>install advanced bionic leg</label>
        <description>Install an advanced bionic leg.</description>
        <descriptionHyperlinks>
            <ThingDef>GTLeg</ThingDef>
            <HediffDef>GTLeg</HediffDef>
        </descriptionHyperlinks>
        <jobString>Installing advanced bionic leg.</jobString>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
            <li>GTLeg</li>
            </thingDefs>
            </filter>
            <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>GTLeg</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Leg</li>
        </appliedOnFixedBodyParts>
        <addsHediff>GTLeg</addsHediff>
    </RecipeDef>
    <!-- RecipeDef (Un-Install) -->
    <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>RemoveGTLeg</defName>
        <label>remove advanced bionic leg</label>
        <description>Remove advanced bionic leg.</description>
        <descriptionHyperlinks>
            <ThingDef>GTLeg</ThingDef>
            <HediffDef>GTLeg</HediffDef>
        </descriptionHyperlinks>
        <jobString>Removing advanced bionic leg.</jobString>
        <removesHediff>GTLeg</removesHediff>
    </RecipeDef>
