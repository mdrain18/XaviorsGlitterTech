<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Advanced Bionic Arm -->
    <!-- HediffDef -->
    <HediffDef ParentName="GlitterTechBionicBase">
        <defName>GTArm</defName>
        <label>Advanced bionic arm</label>
        <labelNoun>an advanced bionic arm</labelNoun>
        <description>The second generation of bionic upgrades, using nano fibres to produce artificial muscles. Gives the owner incredible strength. You may destroy your opponents' limbs in a fist fight...not recommended for wardens.</description>
        <descriptionHyperlinks>
            <ThingDef>GTArm</ThingDef>
        </descriptionHyperlinks>
        <comps>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li>
                        <label>fist</label>
                        <capacities>
                            <li>Blunt</li>
                        </capacities>
                        <power>12</power>
                        <cooldownTime>2</cooldownTime>
                        <soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
                        <soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
                    </li>
                </tools>
            </li>
        </comps>
        <spawnThingOnRemoved>GTArm</spawnThingOnRemoved>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.3</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <MeleeDPS>5.0</MeleeDPS>
                </statOffsets>
            </li>
        </stages>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.4</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>
    </HediffDef>
